@model ParentsBank.Models.WishList

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>WishList</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.account.Owner)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.account.Owner)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateAdded)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateAdded)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cost)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Link)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Link)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Purchased)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Purchased)
        </dd>

        @if (Model.Purchasable == 0)
        {
            <dt>
                Amount needed to make a purchase
            </dt>

            <dd>
                @Model.AmountNeededLeft()
            </dd>
        }
        @if (Model.Purchasable == 1)
        {
            <dt>
                Remaining Balance if a purchase is made
            </dt>

            <dd>
                @Model.AmountNeededLeft()
            </dd>
        }
        
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
